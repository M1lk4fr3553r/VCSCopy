<idea-plugin>
  <id>com.m1lk4fr3553r.intellij.vcscopy</id>
  <name>VCS URL Copy</name>
  <version>1.0</version>
  <vendor email="m1lk4fr3553r@outlook.de" url="http://m1lk4fr3553r.com">M1lk4fr3553r</vendor>

  <description><![CDATA[
      Plugin to copy the URL to the current line (or lines) to the clipboard.
    ]]></description>

  <change-notes><![CDATA[
      Version 1.0: Plugin released, currently supported providers: Github, Gitlab.
    ]]>
  </change-notes>

  <idea-version since-build="202.5103.13"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>Git4Idea</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.m1lk4fr3553r.intellij.vcscopy.SettingsState"/>
    <applicationConfigurable parentId="tools" instance="com.m1lk4fr3553r.intellij.vcscopy.SettingsConfigurable"
      id="com.m1lk4fr3553r.intellij.vcscopy.SettingsConfigurable"
      displayName="VCS Copy URL"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="com.m1lk4fr3553r.intellij.vcscopy.CopyAction" class="com.m1lk4fr3553r.intellij.vcscopy.CopyAction" text="Copy VCS URL">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>
